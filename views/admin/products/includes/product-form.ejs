<form method="post" action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" enctype="multipart/form-data">
        
    <p>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= product.title %>" required>
    </p>
    <p>
        <label for="image">Image</label>
        <input type="file" name="image" id="image" accept="image/png,image/jpg" <% if (imageRequired) {%> required <% } %>>
    </p>
    <p>
        <label for="summary">Summary</label>
        <input type="text" name="summary" id="summary" maxlength="250" value="<%= product.summary %>">
    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" name="price" id="price" min="0.01" required step="0.01" value="<%= product.price %>">
    </p>
    <p>
        <label for="dewcription">Description</label>
        <textarea name="description" id="description" required rows="7"><%= product.description %></textarea>
    </p>
    <p>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button class="btn">Save</button>
    </p>

</form>

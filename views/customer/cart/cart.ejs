<%- include('../../shared/includes/head', {pageTitle: "Your Cart"}) %> 
<link rel="stylesheet" href="/styles/cart.css">
<script src="/scripts/cart-item-management.js" defer></script>
</head>
<body>
<%-include('../../shared/includes/header') %>
<main>
    <h1>Your Cart</h1>
    <section>
        <ul id="cart-items">
            <% for(const item of locals.cart.items) { %>
            <li>
                <%- include('includes/cart-item', {item}) %>
            </li>
            <% } %>
        </ul>
        <div id="cart-total">
            <p>Total: $<%= locals.cart.totalPrice.toFixed(2) %></p>
            <%  if(locals.isAuth) { %>
            <button class="btn">Buy Products</button>
            <% } else { %> 
                <p id="cart-total-fallback">Log in to proceed and purchase the items.</p>
            <% }  %>
        </div>
    </section>
 </main>

<%- include('../../shared/includes/footer') %>
